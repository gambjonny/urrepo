{
  "name": "@urrepo/root",
  "version": "0.0.1",
  "description": "a monorepo setup",
  "scripts": {
    "clean": "find ./ -name node_modules -type d -exec rm -rf {} +",
    "reinstall": "wireit",
    "build:project": "tsc -b",
    "build:all": "wireit",
    "test:all": "wireit",
    "coverage:all": "wireit",
    "format:all": "wireit",
    "lint:all": "wireit"
  },
  "keywords": [
    "monorepo",
    "pnpm-workspaces",
    "wireit"
  ],
  "author": "Jonny Gamba",
  "license": "ISC",
  "engines": {
    "node": "22.12.0",
    "pnpm": "10.0.0"
  },
  "volta": {
    "node": "22.12.0",
    "pnpm": "10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "core-js",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@pandacss/dev": "catalog:",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/eslint-plugin": "catalog:",
    "@vitest/ui": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:",
    "wireit": "^0.14.11"
  },
  "wireit": {
    "reinstall": {
      "command": "pnpm i",
      "dependencies": [
        "clean"
      ]
    },
    "build:all": {
      "dependencies": [
        "./packages/preset:build"
      ]
    },
    "test:all": {
      "command": "vitest --run"
    },
    "coverage:all": {
      "command": "vitest run --coverage"
    },
    "format:all": {
      "dependencies": [
        "./packages/eslint-config:format:check",
        "./packages/preset:format:check"
      ]
    },
    "lint:all": {
      "dependencies": [
        "./packages/preset:lint:check"
      ]
    }
  }
}
