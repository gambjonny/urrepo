{
  "name": "@urrepo/preset",
  "type": "module",
  "version": "0.0.1",
  "description": "core preset",
  "main": "src/index.ts",
  "sideEffects": false,
  "keywords": [
    "panda-css",
    "preset",
    "theme",
    "styling"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "test:watch": "vitest",
    "coverage": "wireit",
    "lint:check": "wireit",
    "lint:fix": "wireit",
    "format:check": "wireit",
    "format:fix": "wireit"
  },
  "license": "ISC",
  "engines": {
    "node": "22.12.0",
    "pnpm": "10.0.0"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "dependencies": {
    "@urrepo/eslint-config": "workspace:*"
  },
  "peerDependencies": {
    "@pandacss/dev": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "eslint": "catalog:",
    "@eslint/js": "catalog:",
    "typescript-eslint": "catalog:",
    "prettier": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "vitest": "catalog:",
    "@vitest/ui": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/eslint-plugin": "catalog:"
  },
  "wireit": {
    "build": {
      "command": "tsc",
      "dependencies": [],
      "files": [
        "**/*.{ts,tsx,js,json}",
        "*.config.*",
        ".prettier*"
      ],
      "output": [
        "dist/**"
      ]
    },
    "test": {
      "command": "vitest run",
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "vitest.config.ts"
      ]
    },
    "coverage": {
      "command": "vitest run --coverage",
      "dependencies": [
        "test"
      ]
    },
    "lint:check": {
      "command": "eslint .",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ]
    },
    "lint:fix": {
      "command": "eslint . --fix",
      "files": [
        "src/**/*.ts",
        "eslint.config.js"
      ]
    },
    "format:check": {
      "command": "prettier --ignore-path ../../.prettierignore --check .",
      "files": [
        "src/**/*.ts"
      ]
    },
    "format:fix": {
      "command": "prettier --ignore-path ../../.prettierignore --write .",
      "files": [
        "src/**/*.ts"
      ]
    }
  }
}
